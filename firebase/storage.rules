rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Static assets: Backend writes, public reads

    // Theme artifacts (CSS and design tokens)
    match /theme-artifacts/{tenantId}/{hash}/{file} {
      // Public read access for theme CSS and tokens
      allow read: if true;

      // Only Cloud Functions can write (via service account - implicit)
      allow write: if false;
    }

    // Tenant assets (logos, favicons)
    match /tenant-assets/{tenantId}/{file} {
      // Public read access for tenant logos and favicons
      allow read: if true;

      // Only Cloud Functions can write (via service account - implicit)
      allow write: if false;
    }

    // Tenant image library
    match /tenant-assets/{tenantId}/library/{imageId} {
      // Public read access for library images
      allow read: if true;

      // Only Cloud Functions can write (via service account - implicit)
      allow write: if false;
    }

    // Group attachments (receipts, comment attachments)
    // Private: served only via authenticated proxy endpoint
    match /attachments/{groupId}/{fileName} {
      // No direct access - only via Cloud Functions proxy
      allow read, write: if false;
    }

    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
