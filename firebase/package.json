{
  "name": "backend",
  "version": "1.0.0",
  "description": "Firebase backend system with Cloud Functions for storing and retrieving JSON documents",
  "scripts": {
    "build": "tsc --project tsconfig.json && cd functions && npm run build",
    "clean": "tsx scripts/dev/kill-emulators.ts && rm -rf firebase-export-* *.log functions/*.log ../*.log && rm -rf public",
    "super-clean": "npm run clean && rm -rf node_modules",
    "kill-emulators": "tsx scripts/dev/kill-emulators.ts",
    "switch-instance": "tsx scripts/switch-instance.ts",
    "test": "ORIGINAL_TEST_SCRIPT=test node ../scripts/test-wrapper.js",
    "test:unit": "ORIGINAL_TEST_SCRIPT=test:unit node ../scripts/test-wrapper.js",
    "test:integration": "ORIGINAL_TEST_SCRIPT=test:integration node ../scripts/test-wrapper.js",
    "link-webapp": "rm -rf public && ln -sf ../webapp-v2/dist public",
    "start-emulators": "npm run kill-emulators && tsx scripts/dev/generate-firebase-config.ts && tsx scripts/dev/start-with-data.ts",
    "sync-tenants": "FORCE_OVERWRITE=1 tsx -e \"import('./scripts/sync-tenant-configs').then(m => m.syncLocalTenantConfigs({ defaultOnly: true }))\"",
    "theme:publish-local": "tsx -e \"import('./scripts/sync-tenant-configs').then(m => m.syncLocalTenantConfigs())\"",
    "generate:test-data": "tsx scripts/dev/generate-test-data.ts",
    "delete-firebase-data": "cd functions && node scripts/delete-firebase-data.js",
    "deploy": "echo 'Use deploy:all or deploy:functions etc. Instance defaults to staging-1.'",
    "deploy:all": "npx tsx scripts/deployment/deploy-from-fresh-checkout.ts all",
    "deploy:functions": "npx tsx scripts/deployment/deploy-from-fresh-checkout.ts functions",
    "deploy:hosting": "npx tsx scripts/deployment/deploy-from-fresh-checkout.ts hosting",
    "deploy:rules": "npx tsx scripts/deployment/deploy-from-fresh-checkout.ts rules",
    "deploy:indexes": "npx tsx scripts/deployment/deploy-from-fresh-checkout.ts indexes",
    "deploy:staging-1:inner": "bash scripts/deployment/deploy-staging.sh all",
    "deploy:functions:inner": "bash scripts/deployment/deploy-staging.sh functions",
    "deploy:hosting:inner": "bash scripts/deployment/deploy-staging.sh hosting",
    "deploy:rules:inner": "bash scripts/deployment/deploy-staging.sh rules",
    "deploy:indexes:inner": "bash scripts/deployment/deploy-staging.sh indexes",
    "download:indexes": "bash scripts/deployment/staging-operations.sh download-indexes",
    "postdeploy:sync-tenant": "bash scripts/deployment/staging-operations.sh sync-tenant",
    "seed-policies:staging-1": "bash scripts/deployment/staging-operations.sh seed-policies",
    "logs": "firebase functions:log",
    "promote-user": "tsx scripts/dev/promote-user-to-admin.ts"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@billsplit-wl/test-support": "*",
    "@types/node": "^24.0.14",
    "dotenv": "^17.2.3",
    "firebase-admin": "^13.6.0",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.15"
  }
}
