# Firebase Backend Environment Configuration - Instance 4
# This file contains your Firebase configuration for the fourth instance
# Copy this to .env to use: cp .env.instance4 .env

# =======================
# GENERAL CONFIGURATION
# =======================

# Environment: development, test, staging, production
NODE_ENV=development


# =======================
# LOGGING CONFIGURATION
# =======================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Enable structured JSON logging (recommended for production)
STRUCTURED_LOGGING=false

# Include stack traces in error logs (disable in production for security)
INCLUDE_STACK_TRACE=true

# Enable verbose logging
VERBOSE_LOGGING=true

# =======================
# EMULATOR PORTS - INSTANCE 4
# =======================

# Firebase Emulator UI port
EMULATOR_UI_PORT=9001

# Firebase Auth Emulator port
EMULATOR_AUTH_PORT=9002

# Firebase Functions Emulator port
EMULATOR_FUNCTIONS_PORT=9003

# Firebase Firestore Emulator port
EMULATOR_FIRESTORE_PORT=9004

# Firebase Hosting Emulator port
EMULATOR_HOSTING_PORT=9005

# =======================
# DEVELOPMENT FORM DEFAULTS
# =======================

# Test user credentials for development environment form autofill
DEV_FORM_EMAIL=test1@test.com
DEV_FORM_PASSWORD=passwordpass
WARNING_BANNER=instance-4