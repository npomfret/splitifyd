# Firebase Functions Emulator port
FIREBASE_FUNCTIONS_EMULATOR_PORT=5001

# Firebase Firestore Emulator port
FIREBASE_FIRESTORE_EMULATOR_PORT=8080

# Firebase Hosting Emulator port
FIREBASE_HOSTING_EMULATOR_PORT=5002