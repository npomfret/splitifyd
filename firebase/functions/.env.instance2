# Firebase Backend Environment Configuration - Instance 2
# This file contains your Firebase configuration for the second instance
# Copy this to .env to use: cp .env.instance2 .env

# =======================
# GENERAL CONFIGURATION
# =======================

# Instance mode identifier (dev<number>, prod, etc.)
INSTANCE_MODE=dev2


# =======================
# LOGGING CONFIGURATION
# =======================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Enable structured JSON logging (recommended for production)
STRUCTURED_LOGGING=false

# Include stack traces in error logs (disable in production for security)
INCLUDE_STACK_TRACE=true

# Enable verbose logging
VERBOSE_LOGGING=true

# =======================
# FIREBASE EMULATOR PORTS - INSTANCE 2
# =======================
# Note: FIREBASE_ prefixed variables are reserved by Firebase
# The actual port configuration is handled by firebase.json generation script

# =======================
# EMULATOR PORTS (for scripts)
# =======================

# These are used by the switch-instance script and firebase config generator
EMULATOR_UI_PORT=7001
EMULATOR_AUTH_PORT=7002
EMULATOR_FUNCTIONS_PORT=7003
EMULATOR_FIRESTORE_PORT=7004
EMULATOR_HOSTING_PORT=7005
EMULATOR_STORAGE_PORT=7006

# =======================
# DEVELOPMENT FORM DEFAULTS
# =======================

# Test user credentials for development environment form autofill
DEV_FORM_EMAIL=test1@test.com
DEV_FORM_PASSWORD=passwordpass
WARNING_BANNER=instance-2
