# Firebase Backend Environment Configuration - Instance 3
# This file contains your Firebase configuration for the third instance
# Copy this to .env to use: cp .env.instance3 .env

# =======================
# GENERAL CONFIGURATION
# =======================

# Environment: development, test, staging, production
NODE_ENV=development


# =======================
# CORS CONFIGURATION
# =======================

# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8100,http://localhost:8002

# =======================
# LOGGING CONFIGURATION
# =======================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Enable structured JSON logging (recommended for production)
STRUCTURED_LOGGING=false

# Include stack traces in error logs (disable in production for security)
INCLUDE_STACK_TRACE=true

# Enable verbose logging
VERBOSE_LOGGING=true

# =======================
# EMULATOR PORTS - INSTANCE 3
# =======================

# Firebase Emulator UI port
EMULATOR_UI_PORT=8100

# Firebase Auth Emulator port
EMULATOR_AUTH_PORT=9399

# Firebase Functions Emulator port
EMULATOR_FUNCTIONS_PORT=8001

# Firebase Firestore Emulator port
EMULATOR_FIRESTORE_PORT=8580

# Firebase Hosting Emulator port
EMULATOR_HOSTING_PORT=8002

# =======================
# DEVELOPMENT FORM DEFAULTS
# =======================

# Test user credentials for development environment form autofill
DEV_FORM_EMAIL=test1@test.com
DEV_FORM_PASSWORD=rrRR44$$