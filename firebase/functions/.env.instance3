# Firebase Backend Environment Configuration - Instance 3
# This file contains your Firebase configuration for the third instance
# Copy this to .env to use: cp .env.instance3 .env

# =======================
# GENERAL CONFIGURATION
# =======================

# Instance mode identifier (dev<number>, prod, etc.)
INSTANCE_MODE=dev3


# =======================
# LOGGING CONFIGURATION
# =======================

# Log level: debug, info, warn, error
LOG_LEVEL=debug

# Enable structured JSON logging (recommended for production)
STRUCTURED_LOGGING=false

# Include stack traces in error logs (disable in production for security)
INCLUDE_STACK_TRACE=true

# Enable verbose logging
VERBOSE_LOGGING=true

# =======================
# EMULATOR PORTS - INSTANCE 3
# =======================

EMULATOR_UI_PORT=8001
EMULATOR_AUTH_PORT=8002
EMULATOR_FUNCTIONS_PORT=8003
EMULATOR_FIRESTORE_PORT=8004
EMULATOR_HOSTING_PORT=8005
EMULATOR_STORAGE_PORT=8006

# =======================
# DEVELOPMENT FORM DEFAULTS
# =======================

# Test user credentials for development environment form autofill
DEV_FORM_EMAIL=test1@test.com
DEV_FORM_PASSWORD=passwordpass
WARNING_BANNER=instance-3
