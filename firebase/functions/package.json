{
  "name": "functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "npm run build:check && node scripts/conditional-build.js",
    "build:check": "tsc --project tsconfig.build.json --noEmit",
    "build:prod": "npm run build:check && tsc && npm run copy:locales && node scripts/inject-build-info.js",
    "clean": "rm -rf lib coverage",
    "super-clean": "npm run clean && rm -rf node_modules",
    "copy:locales": "cp -r src/locales lib/ || mkdir -p lib/locales && cp -r src/locales/* lib/locales/",
    "test": "ORIGINAL_TEST_SCRIPT=test node ../../scripts/test-wrapper.js",
    "test:unit": "ORIGINAL_TEST_SCRIPT=test:unit node ../../scripts/test-wrapper.js",
    "test:integration": "ORIGINAL_TEST_SCRIPT=test:integration node ../../scripts/test-wrapper.js",
    "test:direct": "npm run test:unit:direct && npm run test:integration:direct",
    "test:unit:direct": "vitest run src/__tests__/unit/",
    "test:integration:direct": "npm run build && node scripts/cleanup-test-data.js && JAVA_TOOL_OPTIONS=\"-Xmx4g\" vitest run src/__tests__/integration/",
    "test:watch": "vitest watch src/__tests__/unit/",
    "test:coverage": "vitest run --coverage",
    "validate-cors": "node scripts/validate-cors.js",
    "seed:policies": "tsx src/scripts/seed-policies.ts"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@splitifyd/shared": "*",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "i18next": "^25.4.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.8.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "xss": "^1.0.15",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@splitifyd/test-support": "*",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/lodash": "^4.17.6",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "depcheck": "^1.4.7",
    "dotenv": "^17.2.0",
    "supertest": "^7.1.3",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4"
  },
  "private": true
}
