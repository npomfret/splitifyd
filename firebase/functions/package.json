{
  "name": "functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "npm run build:check && node scripts/conditional-build.js",
    "build:check": "tsc --noEmit",
    "build:prod": "npm run clean && tsc --project tsconfig.deploy.json && npm run copy-sharing-assets && node esbuild.config.js",
    "copy-sharing-assets": "mkdir -p lib/sharing lib/locales && (cp ../../webapp-v2/dist/index.html lib/sharing/index-template.html 2>/dev/null || echo 'Warning: webapp dist/index.html not found') && cp -r ../../webapp-v2/src/locales/* lib/locales/",
    "bundle": "node esbuild.config.js",
    "clean": "rm -rf lib",
    "super-clean": "npm run clean && rm -rf node_modules",
    "test": "ORIGINAL_TEST_SCRIPT=test node ../../scripts/test-wrapper.js",
    "test:unit": "ORIGINAL_TEST_SCRIPT=test:unit node ../../scripts/test-wrapper.js",
    "test:integration": "ORIGINAL_TEST_SCRIPT=test:integration node ../../scripts/test-wrapper.js",
    "test:watch": "vitest watch src/__tests__/unit/",
    "analyze-integration-test-performance": "node ../../scripts/analyze-test-performance.js integration-test-results.json",
    "validate-cors": "node scripts/validate-cors.js",
    "seed:policies": "tsx src/scripts/seed-policies.ts"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@billsplit-wl/shared": "^1.0.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.1",
    "google-auth-library": "^10.5.0",
    "ts-firebase-simulator": "^0.9.0",
    "xss": "^1.0.15",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@billsplit-wl/test-support": "^1.0.0",
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "@types/uuid": "^10.0.0",
    "@vitest/ui": "^4.0.15",
    "esbuild": "^0.25.12",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "vitest": "^4.0.15"
  },
  "private": true
}
