{
  "name": "functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "build": "npm run build:check && node scripts/conditional-build.js",
    "build:check": "tsc --project tsconfig.build.json --noEmit",
    "build:prod": "npm run clean && tsc --project tsconfig.deploy.json && npm run copy:locales && node esbuild.config.js",
    "bundle": "node esbuild.config.js",
    "clean": "rm -rf lib coverage",
    "super-clean": "npm run clean && rm -rf node_modules",
    "copy:locales": "cp -r src/locales lib/ || mkdir -p lib/locales && cp -r src/locales/* lib/locales/",
    "test": "ORIGINAL_TEST_SCRIPT=test node ../../scripts/test-wrapper.js",
    "test:unit": "ORIGINAL_TEST_SCRIPT=test:unit node ../../scripts/test-wrapper.js",
    "test:integration": "ORIGINAL_TEST_SCRIPT=test:integration node ../../scripts/test-wrapper.js",
    "test:watch": "vitest watch src/__tests__/unit/",
    "test:coverage": "vitest run --coverage",
    "analyze-integration-test-performance": "node ../../scripts/analyze-test-performance.js integration-test-results.json",
    "validate-cors": "node scripts/validate-cors.js",
    "seed:policies": "tsx src/scripts/seed-policies.ts"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@billsplit-wl/firebase-simulator": "*",
    "@billsplit-wl/shared": "*",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.4.0",
    "i18next": "^25.4.2",
    "i18next-fs-backend": "^2.6.0",
    "xss": "^1.0.15",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@billsplit-wl/test-support": "*",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/lodash": "^4.17.6",
    "@types/node": "^24.0.14",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "esbuild": "^0.25.11",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3",
    "uuid": "^11.1.0",
    "vitest": "^3.2.4"
  },
  "private": true
}
