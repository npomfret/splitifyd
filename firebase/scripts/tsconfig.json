{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node", "vitest/globals"],
    "moduleResolution": "node"
  },
  "include": ["*.ts", "../functions/src/**/*.ts"]
}
