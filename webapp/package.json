{
  "name": "webapp",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "copy:assets": "mkdir -p dist/js && cp src/*.html dist/ && cp -r src/css dist/ && cp -r src/public/* dist/",
    "build:js": "esbuild 'src/js/**/*.ts' 'src/js/**/*.js' --bundle --outdir=dist/js --outbase=src/js --format=esm",
    "build": "npm run clean && npm run copy:assets && npm run build:js",
    "test": "jest --config jest.config.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "gsap": "^3.12.5",
    "scrollreveal": "^4.0.9",
    "three": "^0.162.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@types/jest": "^30.0.0",
    "@types/scrollreveal": "^0.0.11",
    "babel-jest": "^30.0.4",
    "esbuild": "^0.20.2",
    "jest": "^30.0.4",
    "typescript": "^5.8.3"
  }
}
