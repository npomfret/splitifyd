{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "checkJs": false,
    "declaration": false,
    "removeComments": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "paths": {
      "@bill-splitter/shared-types": ["../shared-types/dist/index.d.ts"],
      "@bill-splitter/shared-types/*": ["../shared-types/dist/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}