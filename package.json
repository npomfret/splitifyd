{
  "name": "bill-splitter-monorepo",
  "private": true,
  "workspaces": [
    "firebase/functions",
    "webapp-v2",
    "e2e-tests",
    "packages/*"
  ],
  "scripts": {
    "clean": "npm run clean -ws --if-present",
    "clean:logs": "rm -f firebase/*.log || true",
    "super-clean": "npm run super-clean -ws --if-present && rm -rf node_modules",
    "build:packages": "npm run build -w @billsplit-wl/shared && npm run build -w @billsplit-wl/firebase-simulator",
    "build:firebase-scripts": "tsc --project firebase/tsconfig.json --noEmit",
    "dev:prep": "npm run clean:logs && npm run build:packages && cd firebase && npm run clean && npm run build",
    "dev": "npm run dev:prep && concurrently \"cd webapp-v2 && npm run watch\" \"cd firebase && npm run link-webapp && npm run start-emulators\"",
    "build": "npm run build:firebase-scripts && npm run build:packages && npm run build -ws --if-present",
    "generate:test-data": "cd firebase && npm run generate:test-data",
    "webapp-v2:build": "cd webapp-v2 && npm run build",
    "build:all": "npm run build -w webapp-v2",
    "watch": "npm run watch -ws --if-present",
    "test": "ORIGINAL_TEST_SCRIPT=test node scripts/test-wrapper.js",
    "test:unit": "ORIGINAL_TEST_SCRIPT=test:unit node scripts/test-wrapper.js",
    "test:integration": "ORIGINAL_TEST_SCRIPT=test:integration node scripts/test-wrapper.js",
    "report": "repo-statter . -o reports",
    "get-webapp-url": "node -e \"const config = require('./firebase/firebase.json'); console.log('http://localhost:' + config.emulators.hosting.port)\"",
    "prepare": "npm run build:packages || true",
    "format": "dprint fmt",
    "lint:webapp": "eslint \"webapp-v2/src/**/*.{ts,tsx,js,jsx}\"",
    "lint:styles": "stylelint \"webapp-v2/src/**/*.{css,pcss}\"",
    "check:unused:report": "npx knip > knip-analysis-updated.txt",
    "check:unused-methods": "npx tsx scripts/find-unused-methods.ts"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "@typescript-eslint/parser": "^8.46.4",
    "concurrently": "^9.2.0",
    "dprint": "^0.50.2",
    "eslint": "^9.39.1",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "knip": "^5.64.1",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "ts-morph": "^27.0.0",
    "typescript": "^5.8.3"
  },
  "msw": {
    "workerDirectory": [
      "webapp-v2/public"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.3"
  }
}
