{
    "name": "@splitifyd/e2e-tests",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "npx tsc --noEmit",
        "test:unit": "npm run build && jest",
        "_test:e2e": "npm run build && PLAYWRIGHT_HTML_OPEN=never npx playwright test --workers=2 --project=chromium",
        "test:e2e:normal-flow": "PLAYWRIGHT_HTML_REPORT=playwright-report/normal npm run _test:e2e -- --reporter=html src/tests/normal-flow",
        "test:e2e:error-testing": "PLAYWRIGHT_HTML_REPORT=playwright-report/errors npm run _test:e2e -- --reporter=html src/tests/error-testing",
        "test:e2e:edge-cases": "PLAYWRIGHT_HTML_REPORT=playwright-report/edge npm run _test:e2e -- --reporter=html src/tests/edge-cases",
        "test:e2e:security": "PLAYWRIGHT_HTML_REPORT=playwright-report/security npm run _test:e2e -- --reporter=html src/tests/security",
        "test:integration": "npm run test:e2e:normal-flow && npm run test:e2e:error-testing && npm run test:e2e:edge-cases",
        "test:all": "npm run test:integration && npm run test:e2e:security",
        "screenshots:walkthrough": "npx playwright test --project=chromium src/tests/screenshots/generate-walkthrough.test.ts",
        "install-browsers": "playwright install --with-deps"
    },
    "dependencies": {
        "@splitifyd/test-support": "*"
    },
    "devDependencies": {
        "@axe-core/playwright": "^4.10.2",
        "@playwright/test": "^1.54.1",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.11.5",
        "jest": "^29.7.0",
        "playwright": "^1.54.1",
        "ts-jest": "^29.1.1",
        "typescript": "^5.8.3"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testMatch": [
            "**/src/__tests__/**/*.test.ts"
        ],
        "moduleNameMapper": {
            "^@shared/(.*)$": "<rootDir>/../firebase/functions/src/$1"
        }
    }
}
