{
  "name": "@billsplit-wl/e2e-tests",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npx tsc --noEmit",
    "clean": "rm -rf playwright-output",
    "super-clean": "npm run clean && rm -rf node_modules",
    "test": "ORIGINAL_TEST_SCRIPT=test node ../scripts/test-wrapper.js",
    "test:unit": "ORIGINAL_TEST_SCRIPT=test:unit node ../scripts/test-wrapper.js",
    "test:integration": "ORIGINAL_TEST_SCRIPT=test:integration node ../scripts/test-wrapper.js",
    "screenshots:walkthrough": "npx playwright test --project=chromium src/tests/screenshots/generate-walkthrough.test.ts",
    "install-browsers": "playwright install --with-deps"
  },
  "dependencies": {
    "@billsplit-wl/shared": "*",
    "@billsplit-wl/test-support": "*",
    "preact": "^10.27.2"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.1",
    "@types/node": "^20.11.5",
    "playwright": "^1.54.1",
    "typescript": "^5.8.3"
  }
}
