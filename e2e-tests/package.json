{
  "name": "@splitifyd/e2e-tests",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npx tsc --noEmit",
    "clean": "rm -rf playwright-report",
    "super-clean": "npm run clean && rm -rf node_modules",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npm run build && jest src/__tests__/unit",
    "test:integration": "npm run build && JAVA_TOOL_OPTIONS=\"-Xmx4g\" PLAYWRIGHT_HTML_REPORT=playwright-report/integration PLAYWRIGHT_HTML_OPEN=never npx playwright test --workers=2 --project=chromium --reporter=html src/__tests__/integration/normal-flow src/__tests__/integration/error-testing src/__tests__/integration/edge-cases src/__tests__/integration/security",
    "screenshots:walkthrough": "npx playwright test --project=chromium src/tests/screenshots/generate-walkthrough.test.ts",
    "install-browsers": "playwright install --with-deps"
  },
  "dependencies": {
    "@splitifyd/test-support": "*"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.5",
    "jest": "^29.7.0",
    "playwright": "^1.54.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.8.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/src/__tests__/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@shared/(.*)$": "<rootDir>/../firebase/functions/src/$1"
    }
  }
}
