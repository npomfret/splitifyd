{
  "name": "@splitifyd/e2e-tests",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npx tsc --noEmit --skipLibCheck",
    "test:unit": "echo 'No unit tests for e2e-tests'",
    "test:integration": "npm run build && playwright test",
    "test:headed": "npm run build && playwright test --headed",
    "test:chromium": "npm run build && playwright test --project=chromium",
    "test:e2e": "npm run build && PLAYWRIGHT_HTML_OPEN=never npx playwright test --workers=2 --project=chromium --reporter=html",
    "install-browsers": "playwright install --with-deps"
  },
  "dependencies": {
    "@splitifyd/test-support": "*"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.1",
    "@types/node": "^20.11.5",
    "playwright": "^1.54.1",
    "typescript": "^5.8.3"
  }
}