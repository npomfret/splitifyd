{
  "name": "@splitifyd/shared",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node scripts/conditional-build.js",
    "build:prod": "tsup",
    "watch": "tsup --watch",
    "clean": "rm -rf dist",
    "super-clean": "npm run clean && rm -rf node_modules",
    "test": "ORIGINAL_TEST_SCRIPT=test node ../../scripts/test-wrapper.js",
    "test:unit": "ORIGINAL_TEST_SCRIPT=test:unit node ../../scripts/test-wrapper.js",
    "test:integration": "ORIGINAL_TEST_SCRIPT=test:integration node ../../scripts/test-wrapper.js",
    "test:direct": "npm run test:unit:direct && npm run test:integration:direct",
    "test:unit:direct": "echo 'No unit tests for shared package'",
    "test:integration:direct": "echo 'No integration tests for shared package'"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
