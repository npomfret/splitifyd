{
  "name": "@billsplit-wl/test-support",
  "version": "1.0.0",
  "description": "Shared test support utilities",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "build": "npx tsc --noEmit",
    "clean": "rm -rf dist",
    "super-clean": "rm -rf node_modules",
    "test": "ORIGINAL_TEST_SCRIPT=test node ../../scripts/test-wrapper.js",
    "test:unit": "ORIGINAL_TEST_SCRIPT=test:unit node ../../scripts/test-wrapper.js",
    "test:integration": "ORIGINAL_TEST_SCRIPT=test:integration node ../../scripts/test-wrapper.js"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@billsplit-wl/shared": "*",
    "@playwright/test": "^1.55.1",
    "firebase-admin": "^13.5.0",
    "ts-firebase-simulator": "^0.3.0"
  }
}
