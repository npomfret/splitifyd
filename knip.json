{
  "$schema": "https://unpkg.com/knip@latest/schema.json",
  "workspaces": {
    ".": {
      "entry": ["scripts/**/*.ts"],
      "project": ["scripts/**/*.ts"]
    },
    "webapp-v2": {
      "entry": ["src/main.tsx", "src/App.tsx", "vite.config.ts", "vitest.config.ts", "playwright.config.ts"],
      "project": ["src/**/*.{ts,tsx}", "vite.config.ts", "vitest.config.ts", "playwright.config.ts"],
      "ignore": ["src/**/*.test.{ts,tsx}", "src/**/*.spec.{ts,tsx}", "src/__tests__/**/*", "dist/**/*", "node_modules/**/*"],
      "ignoreDependencies": ["@types/*", "vite", "vitest", "@vitejs/*"]
    },
    "firebase/functions": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["src/**/*.test.ts", "src/**/*.spec.ts", "src/__tests__/**/*", "lib/**/*", "node_modules/**/*"],
      "ignoreDependencies": ["@types/*", "firebase-functions-test", "typescript"]
    },
    "packages/shared": {
      "entry": ["src/index.ts"],
      "project": ["src/**/*.ts"],
      "ignore": ["dist/**/*", "node_modules/**/*"]
    },
    "e2e-tests": {
      "entry": ["src/**/*.test.ts", "playwright.config.ts"],
      "project": ["src/**/*.ts", "playwright.config.ts"],
      "ignore": ["node_modules/**/*", "test-results/**/*", "playwright-output/**/*"]
    }
  },
  "ignore": ["**/*.d.ts", "**/node_modules/**", "**/dist/**", "**/lib/**", "**/build/**", "**/coverage/**"],
  "ignoreDependencies": ["@types/*"],
  "rules": {
    "files": "error",
    "dependencies": "error",
    "exports": "error",
    "types": "error",
    "duplicates": "error"
  }
}
