{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "pwd >> ~/.claude/bash-context.log && echo \"[$(date)] Directory: $(pwd)\" >> ~/.claude/bash-context.log"
          }
        ]
      }
    ]
  }
}
