{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "pwd"
          }
        ]
      },
      {
        "matcher": "Grep",
        "hooks": [
          {
            "type": "command",
            "command": "pwd"
          }
        ]
      },
      {
        "matcher": "Glob",
        "hooks": [
          {
            "type": "command",
            "command": "pwd"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "pwd"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash",
      "Bash(*)",
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(concurrently:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(jest:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(playwright:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(tsc:*)",
      "Bash(vite:*)",
      "Bash(vitest:*)",
      "Bash(xargs:*)",
      "Task",
      "WebFetch",
      "mcp__context-provider__*",
      "mcp__context7__*",
      "mcp__ide__*",
      "mcp__playwright__*",
      "mcp__ts-morph__*",
      "mcp__typescript-mcp__*"
    ],
    "deny": []
  },
  "mcpServers": {
    "puppeteer": {
      "command": "npx",
      "args": [
        "-y",
        "@cloudflare/puppeteer-core",
        "puppeteer-mcp"
      ]
    },
    "ide": {
      "command": "npx",
      "args": [
        "-y",
        "@vonloxx/mcp-ide"
      ]
    }
  }
}
