{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/prompt-enhancer.sh"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(awk:*)",
      "Bash(bat:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(concurrently:*)",
      "Bash(cp:*)",
      "Bash(delta:*)",
      "Bash(eza:*)",
      "Bash(fd:*)",
      "Bash(find:*)",
      "Bash(fzf:*)",
      "Bash(git add:*)",
      "Bash(git amend:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git filter-branch:*)",
      "Bash(git log:*)",
      "Bash(git merge-base:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(http:*)",
      "Bash(jest:*)",
      "Bash(jq:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(playwright:*)",
      "Bash(rg:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(sg:*)",
      "Bash(tsc:*)",
      "Bash(vite:*)",
      "Bash(vitest:*)",
      "Bash(xargs:*)",
      "Bash(zoxide:*)",
      "Read",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ]
  }
}
