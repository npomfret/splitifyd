{
  "hooks": {
    "PreToolUse": [
      { "matcher": "Bash", "hooks": [{ "type": "command", "command": "pwd" }] },
      { "matcher": "Grep", "hooks": [{ "type": "command", "command": "pwd" }] },
      { "matcher": "Glob", "hooks": [{ "type": "command", "command": "pwd" }] },
      { "matcher": "Task", "hooks": [{ "type": "command", "command": "pwd" }] }
    ]
  },
  "permissions": {
    "allow": [
      "Bash",
      "Bash(awk:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(concurrently:*)",
      "Bash(cp:*)",
      "Bash(find:*)",
      "Bash(git:*)",
      "Bash(grep:*)",
      "Bash(jest:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(mv:*)",
      "Bash(node:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(playwright:*)",
      "Bash(rm:*)",
      "Bash(sed:*)",
      "Bash(tsc:*)",
      "Bash(vite:*)",
      "Bash(vitest:*)",
      "Bash(xargs:*)",
      "Read",
      "WebFetch"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)"
    ]
  }
}
