{
  "name": "webapp-v2",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:check && vite build && node scripts/post-build.js",
    "build:check": "tsc --project tsconfig.build.json --noEmit",
    "build:prod": "tsc && vite build && node scripts/post-build.js",
    "watch": "vite build --watch",
    "preview": "vite preview",
    "typecheck": "npm run build:check",
    "clean": "rm -rf dist",
    "super-clean": "npm run clean && rm -rf node_modules",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "npm run test:unit:vitest && npm run test:unit:playwright",
    "test:unit:vitest": "vitest run src/__tests__/unit/vitest",
    "test:unit:playwright": "playwright test",
    "test:integration": "echo no integration tests",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:debug": "PWDEBUG=1 playwright test",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\" \"scripts/**/*.{js,json}\" \"*.{html,json,js}\""
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@preact/signals": "^2.2.1",
    "@splitifyd/shared": "*",
    "@types/three": "^0.178.1",
    "firebase": "^12.0.0",
    "gsap": "^3.13.0",
    "i18next": "^25.4.0",
    "preact": "^10.19.3",
    "preact-iso": "^2.9.2",
    "preact-router": "^4.1.2",
    "qrcode.react": "^4.2.0",
    "react-i18next": "^15.7.1",
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@preact/preset-vite": "^2.8.1",
    "@splitifyd/test-support": "*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.17",
    "dotenv": "^17.2.0",
    "jest-environment-jsdom": "^30.1.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  }
}
