{
  "name": "webapp-v2",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:check && vite build",
    "build:check": "tsc --project tsconfig.build.json --noEmit",
    "watch": "vite build --watch",
    "preview": "vite preview",
    "typecheck": "npm run build:check",
    "clean": "rm -rf dist",
    "super-clean": "npm run clean && rm -rf node_modules",
    "test": "ORIGINAL_TEST_SCRIPT=test node ../scripts/test-wrapper.js",
    "test:unit": "ORIGINAL_TEST_SCRIPT=test:unit node ../scripts/test-wrapper.js",
    "test:integration": "ORIGINAL_TEST_SCRIPT=test:integration node ../scripts/test-wrapper.js",
    "test:single": "./run-test.sh",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css}\" \"scripts/**/*.{js,json}\" \"*.{html,json,js}\""
  },
  "dependencies": {
    "@billsplit-wl/shared": "^1.0.0",
    "@heroicons/react": "^2.2.0",
    "@preact/signals": "^2.5.1",
    "firebase": "^12.6.0",
    "framer-motion": "^12.23.25",
    "i18next": "^25.7.1",
    "preact": "^10.28.0",
    "preact-router": "^4.1.2",
    "qrcode.react": "^4.2.0",
    "react-i18next": "^16.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@billsplit-wl/test-support": "^1.0.0",
    "@playwright/test": "^1.57.0",
    "@preact/preset-vite": "^2.10.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/preact": "^3.2.4",
    "@types/node": "^20.11.5",
    "jsdom": "^27.2.0",
    "knip": "^5.71.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=20"
  }
}
