{
  "name": "webapp-v2",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:check && vite build && node scripts/post-build.js",
    "build:check": "tsc --project tsconfig.build.json --noEmit",
    "build:prod": "tsc && vite build && node scripts/post-build.js",
    "watch": "mkdir -p ../webapp/dist/v2 && vite build --watch",
    "preview": "vite preview",
    "typecheck": "npm run build:check",
    "clean": "rm -rf dist",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "test:integration": "vitest run src/__tests__/integration/",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "dependencies": {
    "@preact/signals": "^2.2.1",
    "@types/three": "^0.178.1",
    "firebase": "^12.0.0",
    "gsap": "^3.13.0",
    "preact": "^10.19.3",
    "preact-router": "^4.1.2",
    "three": "^0.178.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.1",
    "@preact/preset-vite": "^2.8.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/preact": "^3.2.4",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.11.5",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.17",
    "dotenv": "^17.2.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.54.1",
    "postcss": "^8.4.33",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.8.3",
    "vite": "^5.0.12",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=20"
  }
}
